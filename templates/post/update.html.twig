{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - {{title}}{% endblock %}

{% block body %}
<div class="mb-4">
    <div class="card">
        <div class="row">
            {% if post.file %}
                <div id='image-div' class="d-none d-lg-block col-md-4">
                    <img src="{{asset('uploads/posts/' ~ post.file)}}" class="image-post img-fluid rounded-start" alt="{{post.title}}">
                </div>
            {% endif %}
            <div class="col">
                {% if post.file %}
                    <img src="{{asset('uploads/posts/' ~ post.file)}}" class="image-post card-img-top d-block d-lg-none" alt="{{post.title}}">
                {% endif %}
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <div class="row">
                                <div class="col">
                                    <h4 class="card-title">
                                        {% if not post.status %}
                                            <span class="badge bg-secondary fs-6">
                                                Deshabilitado                                        
                                            </span>
                                        {% endif %}
                                    </h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <small class="text-muted d-flex pt-2">
                                        <p>
                                            <div>
                                                <i class="fa-solid fa-thumbs-up" title="likes"></i>
                                                &nbsp;
                                            </div>
                                            <div id="likes">
                                                {{post.likes}} 
                                            </div>
                                        </p>
                                        &nbsp;
                                        &nbsp;
                                        <p>
                                            <div>
                                                <i class="fa-solid fa-thumbs-down" title='dislikes'></i>
                                                &nbsp;
                                            </div>
                                            <div id="dislikes">
                                                {{post.dislikes}} 
                                            </div>
                                        </p>
                                        &nbsp;
                                        &nbsp;
                                        <p>
                                            <div>
                                                <i class="fa-sharp fa-solid fa-eye" title="vistas"></i>
                                            </div>
                                            <div>
                                                &nbsp;
                                                {{post.watched}}
                                            </div>
                                        </p>
                                    </small>
                                </div>
                                <div class="col text-end">
                                    <a href="#" class="btn btn-light text-info atras ">
                                    <i class="fa-solid fa-arrow-left"></i>
                                    Volver</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr/>
                    <div class="row">
                        <div class="col">
                            {{form(form)}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="{{asset('js/updae-post.js')}}"></script>
{% endblock %}